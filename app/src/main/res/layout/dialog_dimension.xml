<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label_dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/label_dimension"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_edit_dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_x_dimension"
        android:layout_alignParentEnd="true"
        android:text="@string/btn_ok" />

    <EditText
        android:id="@+id/edit_x_dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_dimension"
        android:ems="10"
        android:hint="@string/txt_dimension_x"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_y_dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_dimension"
        android:layout_toEndOf="@id/edit_x_dimension"
        android:ems="10"
        android:hint="@string/txt_dimension_y"
        android:inputType="textPersonName" />
</RelativeLayout>